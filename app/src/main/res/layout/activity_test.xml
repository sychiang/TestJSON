<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.testjson.TestActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="流水編號："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvID"
                android:text="xxxxxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line2"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="類型："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvKind"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="性別："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvSex"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line3"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="體型："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvBodyType"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="毛色："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvColor"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line4"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="年紀："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvAge"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
            <TextView
                android:text="所在地："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvPlace"
                android:text="xxxxxxxxxx"
                android:layout_width="80dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line5"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="收容所："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvShelterName"
                android:text="xxxxxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line6"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="地址："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvShelterAddress"
                android:text="xxxxxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line7"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="電話："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvShelterTel"
                android:text="xxxxxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20px"
            android:id="@+id/line8"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="備註："
                android:layout_width="70dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvRemark"
                android:text="xxxxxxxxxx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
